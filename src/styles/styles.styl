.floating.overlay
  display: none
  position: absolute

  .header
    cursor: move
    user-select: none

  @media screen and (min-width: 800px)
    display: block

#active-object-context
  top: 75px
  left: 20px

#fill-tool
  top: 75px
  left: 20px

#layers-tool
  top: 406px
  left: 5px

#vector-tool
  top: 350px
  right: 100px

#threeD-tool
  top: 75px
  right: 100px

#add-image
  display: none
  position: absolute
  z-index: 1
  top: 15px
  display: none

.model-preview
  position: absolute
  width: 600px
  height: 400px
  
  canvas
    background:
        linear-gradient(-90deg, rgba(0,0,0,.05) 1px, transparent 1px),
        linear-gradient(rgba(0,0,0,.05) 1px, transparent 1px), 
        linear-gradient(-90deg, rgba(0, 0, 0, .04) 1px, transparent 1px),
        linear-gradient(rgba(0,0,0,.04) 1px, transparent 1px),
        linear-gradient(transparent 3px, rgba(242,242,242,.05) 3px, rgba(242,242,242,.05) 78px, transparent 78px),
        linear-gradient(-90deg, rgba(155,155,155,.05) 1px, transparent 1px),
        linear-gradient(-90deg, transparent 3px, rgba(242,242,242,.05) 3px, rgba(242,242,242,.05) 78px, transparent 78px),
        linear-gradient(rgba(155,155,155,.05) 1px, transparent 1px),
        rgba(242,242,242,.05);
    background-size:
        4px 4px,
        4px 4px,
        80px 80px,
        80px 80px,
        80px 80px,
        80px 80px,
        80px 80px,
        80px 80px;

#toolbar
  background: #555
  box-shadow: inset -10px 0px 50px 0px #000
  width 3rem
  .item
    &:active i, &:focus i
      color #FFFFFF !important
    cursor: pointer
    padding 1rem 0.5rem

#container
  margin 0 0 0 -1.3rem
  position: relative

#logo
  position: absolute
  top: 0
  left: 0
  z-index: 1

  img
    user-select: none
    filter: invert(75%)
    transition: filter .25s
    &:hover
      filter: invert(0%) drop-shadow(5px 5px 5px #666)

#main-canvas
  position: absolute
  bottom: 0
  left: 0
  right: 0
  top: 0
  width: 100%
  height: 100%
  z-index: 0

#image_input
  display: none

.ui.white.button
  background-color: #FFFFFF
  &:hover
    box-shadow: 0 0 2px #FFFFFF
  &:active
    box-shadow: 0 0 5px #FFFFFF
