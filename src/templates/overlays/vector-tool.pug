#vector-tool.floating.overlay(style="display: none")
  .ui.header.tiny.grey Options for converting image to vector
  .ui.card
    .content
      .ui.header.tiny
        i.paper.plane.outline.icon
        | Image to Vector
    .content
      .ui.header.tiny Select method
      .method
        .ui.radio.checkbox
          input(id="vctMthImg" type='radio' name='vector-method' value='imagetracer' checked="true")
          label(for="vctMthImg") Imagetracer
        hr
        .ui.radio.checkbox
          input(id="vctMthPo" type='radio' name='vector-method' value='potrace')
          label(for="vctMthPo") Potrace
    .content.imagetracer.controls
      .ui.header.tiny ImageTracer Options
      .ui.accordion
        .title
          i.dropdown.icon
          label Preset
        .content
          select.ui.dropdown.fluid.imagetracerConfig.preset
            option default
            option posterized1
            option posterized2
            option posterized3
            option curvy
            option sharp
            option detailed
            option smoothed
            option grayscale
            option fixedpalette
            option randomsampling1
            option randomsampling2
            option artistic1
            option artistic2
            option artistic3
            option artistic4
        .title
          i.dropdown.icon
          label Colour options
        .content
          .ui.mini.form
            .field
              label Number of Colours
              .ui.labeled.slider.imagetracerConfig.colours
            .field
              label Min Color Ratio (total pixels*mincolorratio)
              input.ui.input.imagetracerConfig.mincolorratio(type='number' step="0.1" value='0')
            .field
              label Color quantization #
              input.ui.input.imagetracerConfig.colorquantcycles(type='number' step="1" value='3')
        .active.title
          i.dropdown.icon
          label Tracing options
        .active.content
          .ui.mini.form
            .fields
              .field
                label 
              .field
                label Blur Radius
                input.ui.input.imagetracerConfig.blurradius(type='number' step="1" value='0')
              .field
                label Blur delta threshold.
                input.ui.input.imagetracerConfig.blurdelta(type='number' step="1" value='20')
            .field
              label Tolerance
              .two.fields
                .field
                  label Straight lines.
                  input.ui.input.imagetracerConfig.ltres(type='number' step="1" value='1')
                .field
                  label Quadratic splines.
                  input.ui.input.imagetracerConfig.qtres(type='number' step="1" value='1')
            .field
              label Minimum path length
              input.ui.input.imagetracerConfig.pathomit(type='number' step="1" value='8')
            .field
              .ui.toggle.checkbox.checked
                input.imagetracerConfig.rightangleenhance(type='checkbox' checked)
                label Enhance right angle corners.
            .field
              .ui.toggle.checkbox
                input.imagetracerConfig.layering(type='checkbox')
                label Layer Sequentially
    .content.potrace.controls
      .ui.header.tiny Potrace Options
      .ui.mini.form
        .field
          label Turn Policy
          select.ui.dropdown.fluid.potraceConfig.turnpolicy
            option Black
            option White
            option Left
            option Right
            option Majority
            option Minority
        .field.inline
          label Turd Size
          input.ui.input.potraceConfig.turdsize(type='number' value='100')
        .field.inline
          label Corner Threshold
          input.ui.input.potraceConfig.alphamax(type='number' value='1')
        .field.inline
          label Curve Tolerance
          input.ui.input.potraceConfig.opttolerance(type='number' step="0.1" value='0.2')
        .field.inline
          .ui.checkbox
            input.potraceConfig.optcurve(type='checkbox')
            label Curve Optimisation
    .extra.content
      .ui.buttons
        .ui.button#btnCreateVector Create
        .or
        .ui.button#btnReplaceVector Replace
